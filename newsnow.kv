#:kivy 1.11.0
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManagement:
    transition: SlideTransition()
    TopicSelectionPage:
    NewsSelectionPage:


<TopicSelectionPage>:
    name: "topic"
    blm_button: blm
    covid_button: covid

    Widget:
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                pos: (0, root.height - (root.height / 5))
                size: (root.width, root.height / 5)
        Label:
            outline_width: 5
            outline_color: (.96, .60, .61, 1)
            color: (1, 1, 1, 1)
            markup: True
            text: "[b]Welcome to the News Now App![/b]"
            font_size: root.width / 17
            pos: (root.center_x - (self.width / 2), (root.height - (root.height / 5)) + (self.height / 2))
            size: self.texture_size
        Label:
            outline_width: 4
            outline_color: (.96, .60, .61)
            color: (1, 1, 1, 1)
            markup: True
            text: "[b]Pick a Topic:[/b]"
            font_size: root.width / 15
            pos: (root.center_x - (self.width / 2), root.height / 1.6)
            size: self.texture_size
        Button:
            id: blm
            background_normal: ""
            background_color: (.54, .84, .89, 1)
            markup: True
            text: "[b]Black Lives Matter[/b]"
            pos: (root.center_x - (self.width / 2), root.height / 2.2)
            size: self.texture_size
            on_press: root.manager.current = "site"
        Button:
            id: covid
            background_normal: ""
            background_color: (.54, .84, .89, 1)
            markup: True
            text: "[b]Coronavirus[/b]"
            pos: (root.center_x - (self.width / 2), root.height / 3.2)
            size: self.texture_size
            on_press: root.manager.current = "site"


<NewsSelectionPage>:
    name: "site"

    Widget:
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                pos: (0, root.height - (root.height / 5))
                size: (root.width, root.height / 5)
        Label:
            outline_width: 5
            outline_color: (.96, .60, .61, 1)
            color: (1, 1, 1, 1)
            markup: True
            text: "[b]News Now[/b]"
            font_size: root.width / 17
            pos: (root.center_x - (self.width / 2), (root.height - (root.height / 5)) + (self.height / 2))
            size: self.texture_size
        Button:
            text: "Fox News"
            font_size: 25
            pos: (50, (root.height - (root.height / 3.5)))
            size: (200, 50)
            on_press: root.manager.current = "topic"
        Button:
            text: "NY Post"
            font_size: 25
            pos: (root.center_x - 100, (root.height - (root.height / 3.5)))
            size: (200, 50)
            on_press: root.manager.current = "topic"
        Button:
            text: "Daily Mail"
            font_size: 25
            pos: (root.width - 250, (root.height - (root.height / 3.5)))
            size: (200, 50)
            on_press: root.manager.current = "topic"
